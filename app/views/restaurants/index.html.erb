<div class="container">
  <div class="mt-3 mb-2" style="display: flex;">
    <div>
      <h1>Restaurants</h1>
    </div>
    <div class="ms-4 mt-1"><%= link_to "Add restaurant", new_restaurant_path, class: "btn btn-primary" %></div>
  </div>
  <div class="cards">
    <% @restaurants.each do |restaurant| %>
      <div class="card-product mt-2 mb-2">
        <%= image_tag "http://source.unsplash.com/featured/?#{restaurant.category}food>&#{rand(1000)}" %>
        <div class="card-product-infos">
          <h2><%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none text-dark" %></h2>
          <p><%= restaurant.category %></p>
          <p><%= restaurant.address %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
